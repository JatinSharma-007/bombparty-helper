{
  "name": "Bombparty Helper",
  "description": "Intended for educational purposes only.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "webNavigation"],
  "host_permissions": [
    "https://jklm.fun/*",
    "https://falcon.jklm.fun/games/bombparty",
    "file:///*/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["wordlist.txt"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup.html"
  }
}
